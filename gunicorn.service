[Unit]
Description=Gunicorn daemon for Workout Backend (Django)
After=network.target

[Service]
User=root
Group=www-data

WorkingDirectory=/home/root/workout-backend-vm

EnvironmentFile=/home/root/workout-backend-vm/.env

Environment="PATH=/home/root/workout-backend-vm/myvenv/bin"

ExecStart=/home/root/workout-backend-vm/myvenv/bin/gunicorn \
    --workers 3 \
    --bind unix:/run/gunicorn.sock \
    config.wsgi:application

Restart=always

[Install]
WantedBy=multi-user.target
